# Environment variables - Copy this to .env and fill with actual values
# NEVER commit .env file with actual credentials to version control

# Database
DATABASE_URL="postgresql://username:password@host:port/database"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-secure-random-string-here"

# OneLogin SSO Configuration
ONELOGIN_CLIENT_ID="your-onelogin-client-id"
ONELOGIN_CLIENT_SECRET="your-onelogin-client-secret"
ONELOGIN_ISSUER="https://your-domain.onelogin.com/"

# Upstash Redis (Vercel KV) Configuration
KV_REST_API_READ_ONLY_TOKEN="your-read-only-token"
KV_REST_API_TOKEN="your-api-token"
KV_REST_API_URL="https://your-instance.upstash.io"
KV_URL="redis://default:your-token@your-instance.upstash.io:6379"

# Optional: Environment Type
NODE_ENV="development"